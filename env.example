# Easy Islanders Environment Configuration
# Copy this file to .env and fill in your values

# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database (for production, use PostgreSQL)
DB_NAME=easy_islanders
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Twilio WhatsApp Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Redis Configuration (optional in development)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
# Toggle Redis cache usage (defaults to LocMem in development)
USE_REDIS_CACHE=false

# LangGraph optional nodes
ENABLE_KNOWLEDGE_NODE=true
ENABLE_SERVICE_NODE=true

# AWS Configuration (for production media storage)
AWS_STORAGE_BUCKET_NAME=your-s3-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_REGION_NAME=us-east-1

# CDN Configuration (optional)
CDN_DOMAIN=your-cdn-domain.com

# Email Configuration (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
