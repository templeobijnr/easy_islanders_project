# Easy Islanders Environment Configuration
# Copy this file to .env and fill in your values

# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database (for production, use PostgreSQL)
DB_NAME=easy_islanders
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Twilio WhatsApp Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Redis Configuration (optional in development)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
# Toggle Redis cache usage (defaults to LocMem in development)
USE_REDIS_CACHE=false

# LangSmith Observability Configuration (Phase B.5)
LANGSMITH_ENABLED=true
LANGSMITH_API_KEY=your_langsmith_api_key
LANGSMITH_PROJECT=easy-islanders-agent
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# Phase B Feature Flags
ENABLE_SUPERVISOR_AGENT=true
ENABLE_ENTERPRISE_AGENT=false
ENABLE_INTENT_PARSER=true
ENABLE_RESILIENCE_LAYER=true
ENABLE_INPUT_GUARDRAILS=true
ENABLE_CONTEXT_OPTIMIZATION=true

# LangGraph optional nodes
ENABLE_KNOWLEDGE_NODE=true
ENABLE_SERVICE_NODE=true

# AWS Configuration (for production media storage)
# ---------------------------------------------------------------------------- #
#                                 AWS S3 Config                                #
# ---------------------------------------------------------------------------- #
# Set these to use S3 for media file storage (recommended for production)
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=
AWS_S3_ENDPOINT_URL=

# CDN Configuration (optional)
CDN_DOMAIN=your-cdn-domain.com

# Email Configuration (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# Zep Memory Configuration (Phase C rollout)
ZEP_ENABLED=false
ZEP_BASE_URL=https://your-zep-instance
ZEP_API_KEY=
ZEP_TIMEOUT_MS=1500
# Feature flags control read/write paths independently
FLAG_ZEP_READ=false
FLAG_ZEP_WRITE=false
