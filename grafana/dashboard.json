{
  "dashboard": {
    "id": null,
    "title": "Easy Islanders - Router Performance",
    "tags": ["easy-islanders", "router", "ml"],
    "timezone": "UTC",
    "panels": [
      {
        "id": 1,
        "title": "Router Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(router_requests_total[5m])",
            "legendFormat": "{{status}} - {{domain}}"
          }
        ],
        "yAxes": [
          {
            "unit": "reqps",
            "min": 0
          }
        ]
      },
      {
        "id": 2,
        "title": "Router Confidence Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(router_confidence_histogram_bucket[5m])",
            "legendFormat": "{{domain}} - {{le}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Expected Calibration Error (ECE)",
        "type": "graph",
        "targets": [
          {
            "expr": "router_calibration_ece",
            "legendFormat": "{{domain}}"
          }
        ],
        "thresholds": [
          {
            "value": 0.05,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 4,
        "title": "Router Accuracy",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(router_accuracy_total{correct=\"true\"}[5m]) / rate(router_accuracy_total[5m])",
            "legendFormat": "{{domain}}"
          }
        ],
        "yAxes": [
          {
            "unit": "percentunit",
            "min": 0,
            "max": 1
          }
        ]
      },
      {
        "id": 5,
        "title": "Router Latency P95",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(router_latency_seconds_bucket[5m]))",
            "legendFormat": "{{domain}}"
          }
        ],
        "yAxes": [
          {
            "unit": "seconds",
            "min": 0
          }
        ],
        "thresholds": [
          {
            "value": 0.12,
            "colorMode": "warning",
            "op": "gt"
          }
        ]
      },
      {
        "id": 6,
        "title": "Uncertain Predictions Ratio",
        "type": "graph",
        "targets": [
          {
            "expr": "router_uncertain_ratio",
            "legendFormat": "{{domain}}"
          }
        ],
        "yAxes": [
          {
            "unit": "percentunit",
            "min": 0,
            "max": 1
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
