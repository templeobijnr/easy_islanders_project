{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://easyislanders.com/schema/ws/1.0/envelope.schema.json",
  "title": "WebSocket Envelope v1.0",
  "description": "Frozen WebSocket frame envelope schema. DO NOT MODIFY without version bump.",
  "type": "object",
  "required": ["type", "event", "thread_id", "payload", "meta"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["chat_message", "chat_status", "chat_error"],
      "description": "Frame type"
    },
    "event": {
      "type": "string",
      "description": "Event name within type"
    },
    "thread_id": {
      "type": "string",
      "minLength": 1,
      "description": "Conversation thread ID"
    },
    "payload": {
      "type": "object",
      "description": "Event-specific payload"
    },
    "meta": {
      "type": "object",
      "description": "Metadata for deduplication and correlation"
    }
  },
  "additionalProperties": false
}
